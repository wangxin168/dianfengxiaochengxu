/* pages/zhuce/zhuce.wxss */

.logo {
  font-size: 50rpx;
  color: #fff;
  text-align: center;
  margin-top: 60rpx;
  height: 120rpx;
}

.register-container {
  height: 900rpx;
  margin: 0 50rpx;
  padding: 0 60rpxm;
  background-color: #fff;
  border-radius: 32rpx;
}

.input-box {
  padding-top: 40rpx;
  width: 86%;
  margin: auto;
}

.input-box view {
  height: 55rpx;
  font-size: 32rpx;
  color: #9b9b9b;
}

.input-box input {
  width: 86%;
  height: 80rpx;
  color: #262628;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  border: none;
  padding: 0 35rpx;
  font-size: 30rpx;
}

.code-box {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  width: 86%;
  margin: 40rpx auto 0;
}

.code-box input {
  height: 80rpx;
  color: #262628;
  background-color: #f5f5f5;
  border-radius: 8rp;
  border: none;
  padding: 0 35rpx;
  flex: 1 1 auto;
  min-width: 0;
  width: 80%;
  font-size: 30rpx;
}

.code-box .code {
  margin-left: 25rpx;
  width: 295rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 30rpx;
  color: #fff;
  border: none;
  background: #7a4bf9;
  background: linear-gradient(to right, #7a4bf9, #b43af3);
}

.login-btn {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  font-size: 36rpx;
  border-radius: 8rpx;
  background: #7a4bf9;
  background: linear-gradient(to right, #7a4bf9, #b43af3);
  width: 86%;
  margin: 60rpx auto 0;
}

.home {
  width: 100%;
  height: 100%;
}

.home .home_bg {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: -1;
}
