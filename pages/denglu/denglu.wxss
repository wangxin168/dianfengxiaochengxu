/* pages/denglu/denglu.wxss */

.logo {
  font-size: 50rpx;
  color: #fff;
  text-align: center;
  margin-top: 100rpx;
  height: 120rpx;
}

.login-container {
  height: 800rpx;
  margin: 0 50rpx;
  padding: 0 60rpx;
  background-color: #fff;
  border-radius: 32rpx;
}

.input-box {
  padding-top: 50rpx;
}

.input-box view {
  height: 55rpx;
  font-size: 32rpx;
  color: #9b9b9b;
}

.input-box input {
  width: 86%;
  height: 80rpx;
  color: #262628;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  border: none;
  padding: 0 35rpx;
  font-size: 30rpx;
}

.login-btn {
  margin-top: 120rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  font-size: 36rpx;
  border-radius: 8rpx;
  background: #7a4bf9;
  background: linear-gradient(to right, #7a4bf9, #b43af3);
}

.register-btn {
  margin-top: 70rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 36rpx;
  color: #8b8b8c;
  text-align: center;
  text-decoration: underline;
}

.home {
  width: 100%;
  height: 100%;
}

.home .home_bg {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: -1;
}
