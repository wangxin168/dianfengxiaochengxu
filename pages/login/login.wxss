.ding{
  margin-top: 220rpx;
  text-align: center;
  padding:0 40rpx;
}
.ding>image{
  width:200rpx;
  height: 200rpx;
}
.ding>.bottom{
  background: #b83af3;
  background: linear-gradient(to right, #6950fb, #b83af3);
  color:#fff;
  font-size: 28rpx;
  border-radius: 50rpx;
  margin-top:120rpx;
  padding:9rpx 0;
}
button:after{
  border:none;
}
.ding .title{
  width:70%;
  font-size: 28rpx;
  color:#000;
  line-height: 3;
  font-family: "微软雅黑";
  font-weight: 700;
  margin:0 auto 40rpx;
  border-bottom: 1rpx solid #F1F1F1;
}
.ding .trips{
  width:70%;
  font-size: 28rpx;
  text-align: left;
  margin:0 auto;
  line-height: 1.7;
  color: #000;
}
.ding .infos{
  width:70%;
  text-align: left;
  font-size: 28rpx;
  margin:0 auto;
  line-height: 1.7;
  color:#959595;
}